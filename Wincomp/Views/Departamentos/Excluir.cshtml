@model Wincomp.Models.Departamento
@{
    ViewBag.Title = "Excluir";
}

<h2>Excluir Depatamento</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <h4>Departamento</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text_danger" })
        @Html.HiddenFor(model => model.DepartamentoID)
        <div class="form-group">
            @Html.LabelFor(model => model.DepartamentoNome, "Nome: ", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayFor(model => model.DepartamentoNome, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DepartamentoNome, "", new { @class = "text-danger" })
            </div>
        </div>
        <table>
            @if (Model.Treinamentos.Count > 0)
            {
                <tr><td class="text-danger"><b>Atenção os seguites cursos serão excluidos</b></td></tr>
                foreach (var curso in Model.Treinamentos)
                {
                    <tr><td>@curso.Titulo</td></tr>
                }
            }
        </table>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10" />
            <input type="submit" value="Excluir" class="btn btn-default" />
        </div>
    </div>
}
<div>@Html.ActionLink("Voltar", "Index")</div>
